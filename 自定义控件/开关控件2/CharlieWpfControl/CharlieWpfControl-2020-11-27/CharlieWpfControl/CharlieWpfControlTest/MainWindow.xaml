<Window x:Class="CUSTOM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:MyNamespace="clr-namespace:CharlieWpfControl;assembly=CharlieWpfControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <UniformGrid Columns="2" Rows="2">
            <Border BorderThickness="2" BorderBrush="Black"  >
                <MyNamespace:SwitchButton Width="auto" Height="auto" CheckedForeground="Yellow"  Foreground="White"   Background="Red" Text="关闭" CheckedText="开启" IsChecked="False"   />
            </Border>
            <Border  BorderThickness="2" BorderBrush="Black"  >
                <MyNamespace:SwitchButton  Width="auto" Height="auto" CheckedForeground="Yellow"  Foreground="White"   Background="Red" Text="关闭" CheckedText="开启" IsChecked="True"   />
            </Border>
            <Border BorderBrush="Black"  >
                <MyNamespace:ArcScrollbar  FontSize="2" Value="0.4" Foreground="Red"  Background='LightGreen'  />
            </Border>
            <Border BorderBrush="Black"  >
                <MyNamespace:ArcScrollbar  FontSize="2" Value="0.8" Foreground="LightBlue"  Background='LightPink'  />
            </Border>
        </UniformGrid>
        
    </Grid>
</Window>
